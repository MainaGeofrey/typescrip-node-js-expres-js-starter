// tsconfig.json
{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",                      // Use ESM
    "moduleResolution": "Bundler",             // Required for ESM
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": ".",                         // Enable path aliasing
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
